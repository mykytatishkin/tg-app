TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
MINI_APP_URL=https://your-ngrok-url.ngrok-free.dev
JWT_SECRET=your_jwt_secret
DB_HOST=localhost
DB_PORT=5432
DB_USER=tgapp
DB_PASSWORD=tgapp_secret
DB_NAME=tgapp

# Backup: local (folder synced with OneDrive) or onedrive (Microsoft Graph API)
BACKUP_DESTINATION=local
# For local: path to folder (e.g. OneDrive sync folder)
BACKUP_LOCAL_PATH=/path/to/OneDrive/Backups/tg-app
# Optional: timezone for daily cron (e.g. Europe/Kyiv)
# BACKUP_TZ=Europe/Kyiv
# Set to false if DB runs on host (not in Docker)
# BACKUP_USE_DOCKER=true

# For onedrive: Azure app client id/secret and refresh_token (from OAuth2 once)
# ONEDRIVE_CLIENT_ID=
# ONEDRIVE_CLIENT_SECRET=
# ONEDRIVE_REFRESH_TOKEN=
